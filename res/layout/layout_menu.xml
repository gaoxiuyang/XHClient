<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" 
    android:orientation="vertical">
	<RelativeLayout 
	    android:id="@+id/ll_login"
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
    
	    >
	    <ImageView 
	        android:id="@+id/iv_touxiang"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_marginTop="30dp"
	        android:layout_marginLeft="20dp"
	        />
	     <com.xuanhui.view.CircularImage
	        android:id="@+id/cover_user_photo1"  
	        android:layout_width="50dp"  
	       	android:layout_height="50dp"  
	     	android:layout_marginTop="30dp"
	        android:layout_marginLeft="20dp" /> 
	    <TextView 
	        android:layout_toRightOf="@id/iv_touxiang"
	        android:id="@+id/tv_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="立即登录"
	        android:textColor="@android:color/white"
	        android:textSize="20dp"
	        android:paddingTop="40dp" 
	        android:paddingLeft="10dp"
	        />
	</RelativeLayout>
    <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="#6d6d6d"
        />
   	   <RelativeLayout 
   	   android:id="@+id/rl_mine"
   	   android:visibility="gone"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="20dp"
   
       >
   	      <ImageView 
   	          	android:id="@+id/iv_mine_icon"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/iv_mine_icon"
   	          />
   	      <TextView 
   	          android:id="@+id/tv_mine"
   	          android:layout_toRightOf="@id/iv_mine_icon"
   	          android:layout_width="wrap_content"
   	          android:layout_height="wrap_content"
   	          android:text="我的宽带"
   	          android:layout_centerVertical="true"
   	          android:textSize="20dp"
   	          android:layout_marginLeft="5dp"
   	          android:textColor="@android:color/white"
   	          />
   	      <ImageView 
   	          android:id="@+id/iv_mine_go"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/right_arrow"
				android:layout_alignParentRight="true"
   	          />
   	   </RelativeLayout>
   	   <LinearLayout 
   	       android:id="@+id/ll_line1"
   	       android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="#6d6d6d"
        />
   	    <RelativeLayout 
   	       android:id="@+id/rl_call_back"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="20dp"
       >
   	      <ImageView 
   	          	android:id="@+id/iv_call"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/iv_call_back"
   	          />
   	      <TextView 
   	          android:id="@+id/tv_mine"
   	          android:layout_toRightOf="@id/iv_call"
   	          android:layout_width="wrap_content"
   	          android:layout_height="wrap_content"
   	          android:text="意见反馈"
   	          android:layout_centerVertical="true"
   	          android:textSize="20dp"
   	          android:layout_marginLeft="5dp"
   	          android:textColor="@android:color/white"
   	          />
   	      <ImageView 
   	          android:id="@+id/iv_mine_go"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/right_arrow"
			android:layout_alignParentRight="true"
   	          />
   	   </RelativeLayout>
   	      <LinearLayout 
   	       android:id="@+id/ll_line3"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="#6d6d6d"
        />
   	     <RelativeLayout 
   	       android:id="@+id/rl_tel"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       >
   	      <ImageView 
   	          	android:id="@+id/iv_tel"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/iv_call"
   	          />
   	      <TextView 
   	          android:id="@+id/tv_call_mine"
   	          android:layout_toRightOf="@id/iv_tel"
   	          android:layout_width="wrap_content"
   	          android:layout_height="wrap_content"
   	          android:text="联系我们"
   	          android:layout_centerVertical="true"
   	          android:textSize="20dp"
   	          android:layout_marginLeft="5dp"
   	          android:textColor="@android:color/white"
   	          />
   	      <ImageView 
   	          android:id="@+id/iv_mine_go"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/right_arrow"
			android:layout_alignParentRight="true"
   	          />
   	   </RelativeLayout>
   	      <LinearLayout 
   	    android:id="@+id/ll_line2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="#6d6d6d"
        />
   	    <RelativeLayout 
   	   android:id="@+id/rl_baout"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       >
   	      <ImageView 
   	          	android:id="@+id/iv_about"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/iv_about"
   	          />
   	      <TextView 
   	          android:id="@+id/tv_mine"
   	          android:layout_toRightOf="@id/iv_about"
   	          android:layout_width="wrap_content"
   	          android:layout_height="wrap_content"
   	          android:text="关于我们"
   	          android:layout_centerVertical="true"
   	          android:textSize="20dp"
   	          android:layout_marginLeft="5dp"
   	          android:textColor="@android:color/white"
   	          />
   	      <ImageView 
   	          android:id="@+id/iv_mine_go"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/right_arrow"
		android:layout_alignParentRight="true"
   	          />
   	   </RelativeLayout>
   	      	   <LinearLayout 
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="#6d6d6d"
        />
   	        <RelativeLayout 
   	       android:id="@+id/rl_out"
   	       android:visibility="gone"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       >
   	        <ImageView 
   	          	android:id="@+id/iv_tuichu"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/edit"
   	          />
   	    
   	      <TextView 
   	          android:layout_toRightOf="@id/iv_tuichu"
   	          android:id="@+id/tv_call_mine"
   	          android:layout_width="wrap_content"
   	          android:layout_height="wrap_content"
   	          android:text="退出账户"
   	          android:layout_centerVertical="true"
   	          android:textSize="20dp"
   	          android:layout_marginLeft="5dp"
   	          android:textColor="@android:color/white"
   	          />
   	           <ImageView 
   	          	android:id="@+id/iv_mine_go"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_centerVertical="true"
				android:src="@drawable/right_arrow"
				android:layout_alignParentRight="true"
   	          />
   	           </RelativeLayout>
</LinearLayout>