<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#eee"
   >
   <ScrollView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none"
       >
   <LinearLayout
            android:id="@+id/ll_content"
            android:layout_below="@id/rl_title_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="18.5dp" >

            <RelativeLayout
                android:id="@+id/rl_kuandai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
            	android:background="@drawable/layout_selector"
                android:padding="10dp" >
                <ImageView 
                    android:id="@+id/iv_kuandai"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/kaidan"
                    />
                <TextView
                    android:id="@+id/tv_currentuser"
                    android:layout_toRightOf="@id/iv_kuandai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="我的宽带"
                    android:textColor="#6d6d6d"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_arrow_currentuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow1" />

                <TextView
                    android:id="@+id/tv_currentuser_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_toLeftOf="@id/iv_arrow_currentuser" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_youxain"
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:clickable="true"
            	android:background="@drawable/layout_selector"
                android:gravity="center"
                android:padding="10dp"  >

                 <ImageView 
                    android:id="@+id/iv_tv"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/tv"
                    />
                <TextView
                    android:id="@+id/tv_minedata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="我的有线"
                    android:textColor="#6d6d6d"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_arrow_minedata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow1" />

                <ImageView
                    android:id="@+id/iv_newtag_minedata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv_arrow_minedata"
                    android:src="@drawable/newtag"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jifen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:clickable="true"
            	android:background="@drawable/layout_selector"
                android:gravity="center"
                android:padding="10dp" >

                  <ImageView 
                    android:id="@+id/iv_jf"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/jifen"
                    />
                <TextView
                    android:id="@+id/tv_changepwd"
                    android:layout_toRightOf="@id/iv_jf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  	android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="我的积分"
                    android:textColor="#6d6d6d"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_arrow_changepwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow1" />

                <ImageView
                    android:id="@+id/iv_newtag_changepwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv_arrow_changepwd"
                    android:src="@drawable/newtag"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_huodong"
               android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:clickable="true"
            	android:background="@drawable/layout_selector"
                android:gravity="center"
                android:padding="10dp" >

                 <ImageView 
                    android:id="@+id/iv_hd"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/huodong"
                    />
                <TextView
                    android:id="@+id/tv_invite"
                    android:layout_toRightOf="@id/iv_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="我的活动"
                    android:textColor="#6d6d6d"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/iv_arrow_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow1" />

                <ImageView
                    android:id="@+id/iv_newtag_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/newtag"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_invite"
                android:layout_marginTop="15dp"
              	android:layout_width="match_parent"
                android:layout_height="wrap_content"
        
                android:clickable="true"
            	android:background="@drawable/layout_selector"
                android:gravity="center"
                android:padding="10dp" >

                 <ImageView 
                    android:id="@+id/iv_dd"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/order"
                    />
                <TextView
                    android:id="@+id/tv_order"
                    android:layout_toRightOf="@id/iv_dd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:text="我的订单"
                    android:textColor="#6d6d6d"
                    android:textSize="18dp" />

         
                <ImageView
                    android:id="@+id/iv_arroww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow1" />
                       <TextView
                    android:id="@+id/tv_all_order"
                    android:layout_toLeftOf="@id/iv_arroww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:text="全部订单"
                    android:textColor="#6d6d6d"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/iv_newtag_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/newtag"
                    android:visibility="gone" />
            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/layout_selector"
                android:paddingBottom="10dp"
                >
                <LinearLayout 
                    android:id="@+id/ll_weifuluan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView 
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:src="@drawable/fukuan"  
						android:layout_gravity="center"                      
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="待付款"
                        android:textSize="15dp"
                        android:textColor="#6d6d6d"
                        />
                    <LinearLayout 
                        android:id="@+id/ll_pay_OK"
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="#16a0e8"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                  <LinearLayout 
                      android:id="@+id/ll_weiyanzhaung"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView 
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:src="@drawable/anzhuang"  
						android:layout_gravity="center"                      
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="待安装"
                        android:textSize="15dp"
                        android:textColor="#6d6d6d"
                        />
                     <LinearLayout 
                        android:id="@+id/ll_anzhuang_OK"
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/bg_edittext"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                  <LinearLayout 
                    android:id="@+id/ll_yiwangcheng"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView 
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:src="@drawable/qunren"  
						android:layout_gravity="center"                      
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="已完成"
                        android:textSize="15dp"
                        android:textColor="#6d6d6d"
                        />
                     <LinearLayout 
                        android:id="@+id/ll_wancheng_OK"
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/bg_edittext"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
             <include 
		     android:id="@+id/il_weifukuan"
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     layout="@layout/view_weifukuan" />
                <include 
                    android:visibility="gone"
		     android:id="@+id/il_weianzhaung"
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     layout="@layout/view_weianzhuang" />
                   <include 
                       android:visibility="gone"
		     android:id="@+id/il_yiwancheng"
		     android:layout_width="fill_parent"
		     android:layout_height="wrap_content"
		     layout="@layout/view_yiwancheng" />
             </RelativeLayout>
        </LinearLayout>
     </ScrollView>
</RelativeLayout>