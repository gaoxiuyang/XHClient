<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/view_hot1"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/layout_selector"
     android:paddingBottom="12dp"
     android:paddingTop="5dp"
     >
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/bg_edittext6"
		    android:orientation="vertical"
		    android:layout_margin="5dp"
		    >
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		       android:layout_margin="5dp"
		        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="订单编号:"
		        android:textSize="12dp"
		        android:textColor="#303030"
		        />
		     <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="5dp"
		        android:text="TD129287012"
		        android:textSize="12dp"
		        android:textColor="#8b8b8b"
		        />
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		       android:layout_margin="5dp"
		        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="轩慧账号:"
		        android:textSize="12dp"
		        android:textColor="#303030"
		        />
		     <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="5dp"
		        android:text="TSIQ3821"
		        android:textSize="12dp"
		        android:textColor="#8b8b8b"
		        />
		    </LinearLayout>
		      <RelativeLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		       android:layout_margin="5dp"
		        >
		    <TextView 
		        android:id="@+id/tv_yewu"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="订单业务:"
		        android:textSize="12dp"
		        android:textColor="#303030"
		        />
		     <TextView 
		        android:layout_toRightOf="@id/tv_yewu"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="5dp"
		        android:text="120M  一年"
		        android:textSize="12dp"
		        android:textColor="#8b8b8b"
		        />
		     <TextView
                    android:id="@+id/tv_tele_cuian"
                    android:layout_toLeftOf="@id/iv_arroww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:text="电话催装"
                    android:textColor="#6d6d6d"
                    android:textSize="12dp" />
		      <ImageView
                    android:id="@+id/iv_arroww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow1" />
		    </RelativeLayout>
		     <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		       android:layout_margin="5dp"
		        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="订单金额:"
		        android:textSize="12dp"
		        android:textColor="#303030"
		        />
		     <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="5dp"
		        android:text="￥1980"
		        android:textSize="12dp"
		        android:textColor="#8b8b8b"
		        />
		    </LinearLayout>
		      <LinearLayout 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		       android:layout_margin="5dp"
		        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="2012/7/25"
		        android:textSize="12dp"
		        android:textColor="#8b8b8b"
		        />
		     <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="5dp"
		        android:text="04:22:16"
		        android:textSize="12dp"
		        android:textColor="#8b8b8b"
		        />
		    </LinearLayout>
		</LinearLayout>
 	</LinearLayout>
