<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/view_hot1"
    android:layout_height="120dp"
    android:orientation="horizontal"
     android:background="@drawable/bg_edittext"
     >
 
          <!-- 图标 -->
 	   <RelativeLayout 
 	   android:layout_width="120dp"
   	   android:layout_height="120dp"
       android:orientation="vertical" 
 	    >
 	    
 	       <RelativeLayout 
 	           android:id="@+id/rl_gm"
         android:layout_width="70dp"
         android:layout_marginTop="15dp"
         android:layout_height="70dp"
         android:layout_centerHorizontal="true"
         android:background="@drawable/yuan1"
        >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_centerInParent="true"
               android:text="光  猫"
               android:textColor="@android:color/white"
               android:textSize="20dp" />
    	 </RelativeLayout>
 	       <TextView 
 	           android:layout_below="@id/rl_gm"
 	           android:layout_width="wrap_content"
 	           android:layout_height="wrap_content"
 	           android:layout_marginTop="5dp"
 	           android:layout_centerInParent="true"
 	           android:text="极速光猫"
 	           android:textColor="#16a0e8"
 	           android:layout_gravity="center_horizontal"
 	           />
 	   </RelativeLayout> 
 	   <!-- 分割线 -->
 	    <LinearLayout 
 	        android:layout_width="0.2dp"
 	        android:layout_height="120dp"
 	        android:background="#8f8f8f"
 	        />
 	    <LinearLayout 
 	        android:layout_width="fill_parent"
 	        android:layout_height="120dp"
 	        android:orientation="vertical"
 	        >
 	        <TextView
 	            android:paddingTop="17dp"
 	            android:layout_width="wrap_content"
 	            android:layout_height="wrap_content"
 	            android:layout_gravity="center_horizontal"
 	            android:text="光纤到户，上网必备"
 	            android:textColor="#6d6d6d"
 	            android:textSize="17dp"
 	            />
 	        <LinearLayout 
 	            android:layout_marginTop="20dp"
 	            android:layout_width="fill_parent"
 	            android:layout_height="0.2dp"
 	            android:background="#8f8f8f"
 	            />
 	        <RelativeLayout 
 	            android:layout_marginTop="15dp"
 	            android:layout_width="wrap_content"
 	            android:layout_height="wrap_content"
 	            android:layout_gravity="center_horizontal"
 	            >
 	            <TextView 
 	                android:id="@+id/tv_guangnia"
 	                android:layout_width="wrap_content"
 	                android:layout_height="wrap_content"
 	                android:text="￥190/个"
 	                android:layout_centerVertical="true"
 	                android:textColor="#6d6d6d"
 	                android:textSize="17dp"
 	                />
 	          <Button
 	            android:layout_toRightOf="@id/tv_guangnia"
 	            android:layout_marginRight="20dp"
 	             android:layout_marginLeft="20dp"
 	            android:layout_alignParentRight="true"
		        android:id="@+id/btn_gunagmao_pag"
		        android:layout_width="80dp"
		        android:layout_height="35dp"
		        android:background="@drawable/shape_roundbtn_blue"
		        android:text="购  买"
		        android:textSize="17dp"
		        android:layout_centerVertical="true"
		        android:textColor="@android:color/white" />
 	        </RelativeLayout>
 	    </LinearLayout>
 	</LinearLayout>

