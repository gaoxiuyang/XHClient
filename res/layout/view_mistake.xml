<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/view_hot1"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   android:background="@drawable/bg_edittext6"
     >
 
         <RelativeLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          >
           <!-- 报修单title -->
      		<TextView 
      		    android:id="@+id/tv_baoxiu"
      		    android:layout_width="wrap_content"
      		    android:layout_height="wrap_content"
      		    android:text="报修单"
				android:layout_centerHorizontal="true"
				android:textSize="20dp"
				android:textColor="#6d6d6d"      		    
      		    />
      		 <!-- 分割线 -->
     		 <LinearLayout
     		 android:id="@+id/ll_line" 
     		 android:layout_below="@id/tv_baoxiu"
     	     android:layout_width="fill_parent"
     	     android:layout_height="1dp"
     	     android:background="#8b8b8b"
     	     android:layout_marginBottom="10dp"
     	     />
     		 <LinearLayout 
     		     android:id="@+id/ll_name"
     		     android:layout_below="@id/ll_line"
     		     android:layout_width="fill_parent"
     		     android:layout_height="wrap_content"
     		     android:orientation="horizontal"
     		      android:layout_marginBottom="3dp"
     		     >
     		     <ImageView 
     		         android:layout_width="35dp"
     		         android:layout_height="35dp"
     		         android:src="@drawable/user_name"
     		         android:layout_marginLeft="5dp"
     		         android:layout_marginBottom="3dp"
     		         />
     		     <EditText   
     		         android:id="@+id/et_name"
				    android:layout_width="fill_parent"  
				    android:layout_height="35dip"  
				    android:background="@drawable/bg_edittext7"  
				    android:layout_marginBottom="5dp"
				    android:layout_marginLeft="3dp"
				    android:layout_marginRight="5dp"
				    android:textColorHint="#AAAAAA"  
				    android:textSize="15dip"  
				    android:singleLine="true"  
				    android:hint="请输入用户名"  
				/>  
     		 </LinearLayout>
     		  <LinearLayout 
     		     android:id="@+id/ll_tel"
     		     android:layout_below="@id/ll_name"
     		     android:layout_width="fill_parent"
     		     android:layout_height="wrap_content"
     		     android:orientation="horizontal"
     		      android:layout_marginBottom="3dp"
     		     >
     		     <ImageView 
     		         android:layout_width="35dp"
     		         android:layout_height="35dp"
     		         android:src="@drawable/tele_phone"
     		         android:layout_marginLeft="5dp"
     		         android:layout_marginBottom="3dp"
     		         
     		         />
     		     <EditText   
     		        android:id="@+id/et_tel_num"
				    android:layout_width="fill_parent"  
				    android:layout_height="35dip"  
				    android:background="@drawable/bg_edittext7"  
				    android:layout_marginBottom="5dp"
				    android:layout_marginLeft="3dp"
				    android:layout_marginRight="5dp"
				    android:textColorHint="#AAAAAA"  
				    android:textSize="15dip"  
				    android:singleLine="true"  
				    android:digits="0123456789"
				    android:hint="请输入联系电话"  
				/>  
     		 </LinearLayout>
     		   <LinearLayout 
     		     android:id="@+id/ll_address"
     		     android:layout_below="@id/ll_tel"
     		     android:layout_width="fill_parent"
     		     android:layout_height="wrap_content"
     		     android:orientation="horizontal"
     		      android:layout_marginBottom="3dp"
     		     >
     		     <ImageView 
     		         android:layout_width="35dp"
     		         android:layout_height="35dp"
     		         android:src="@drawable/map"
     		         android:layout_marginLeft="5dp"
     		         android:layout_marginBottom="3dp"
     		         
     		         />
     		     <EditText   
     		           android:id="@+id/et_address"
				    android:layout_width="fill_parent"  
				    android:layout_height="35dip"  
				    android:background="@drawable/bg_edittext7"  
				    android:layout_marginBottom="5dp"
				    android:layout_marginLeft="3dp"
				    android:layout_marginRight="5dp"
				    android:textColorHint="#AAAAAA"  
				    android:textSize="15dip"  
				    android:singleLine="true"  
				    android:hint="请输入地址"  
				/>  
     		 </LinearLayout>
     		 <LinearLayout 
     		     android:id="@+id/ll_email"
     		     android:layout_below="@id/ll_address"
     		     android:layout_width="fill_parent"
     		     android:layout_height="wrap_content"
     		     android:orientation="horizontal"
     		      android:layout_marginBottom="3dp"
     		     >
     		     <ImageView 
     		         android:layout_width="35dp"
     		         android:layout_height="35dp"
     		         android:src="@drawable/email"
     		         android:layout_marginLeft="5dp"
     		         android:layout_marginBottom="3dp"
     		         
     		         />
     		     <EditText   
     		         android:id="@+id/et_mail"
				    android:layout_width="fill_parent"  
				    android:layout_height="35dip"  
				    android:background="@drawable/bg_edittext7"  
				    android:layout_marginBottom="5dp"
				    android:layout_marginLeft="3dp"
				    android:layout_marginRight="5dp"
				    android:textColorHint="#AAAAAA"  
				    android:textSize="15dip"  
				    android:singleLine="true"  
				    android:hint="请输入电子邮箱"  
				/>  
     		 </LinearLayout>
     		 	 <LinearLayout 
     		     android:id="@+id/ll_mistake"
     		     android:layout_below="@id/ll_email"
     		     android:layout_width="fill_parent"
     		     android:layout_height="wrap_content"
     		     android:orientation="horizontal"
     		      android:layout_marginBottom="3dp"
     		     >
     		     <ImageView 
     		         android:layout_width="35dp"
     		         android:layout_height="35dp"
     		         android:src="@drawable/mistake"
     		         android:layout_marginLeft="5dp"
     		         android:layout_marginBottom="3dp"
     		         
     		         />
     		     <LinearLayout   
				    android:layout_width="fill_parent"  
				    android:layout_height="wrap_content"  
				    android:layout_marginBottom="5dp"
				    android:layout_marginLeft="3dp"
				    android:layout_marginRight="5dp"
				    android:orientation="vertical"  
				>  
					    <EditText   
					   android:id="@+id/et_mis_des"     
				    android:layout_width="fill_parent"  
				    android:layout_height="35dip"  
				    android:background="@drawable/bg_edittext7"  
				    android:layout_marginBottom="5dp"
				    android:textColorHint="#AAAAAA"  
				    android:textSize="15dip"  
				    android:singleLine="true"  
				    android:hint="故障描述"  
				/> 
					<ImageView 
					    android:id="@+id/iv_image_mis"
					    android:layout_width="200dp"
					    android:layout_height="200dp"
					    android:src="@drawable/tucao_add"
					    
					    />
				</LinearLayout>
     		 </LinearLayout>
     	  </RelativeLayout>
 	</LinearLayout>

